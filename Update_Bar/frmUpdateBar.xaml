<Window x:Class="BatchUpdater.frmUpdateBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchUpdater"
        mc:Ignorable="d"
        Title="Progress"
        Height="150" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <Border Margin="15">
        <StackPanel>
            <TextBlock Text="Updating Revit Files..." 
                       FontSize="14" 
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <TextBlock x:Name="txtCurrentFile" 
                       FontSize="11"
                       Margin="0,0,0,10"
                       TextWrapping="Wrap"/>

            <ProgressBar x:Name="progressBar" 
                         Height="20" 
                         Minimum="0" 
                         Maximum="100"
                         Margin="0,0,0,10"/>

            <TextBlock x:Name="txtProgress" 
                       FontSize="11"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>